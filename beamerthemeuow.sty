\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeuow}
   [2015/07/18 A Beamer Theme That Matches the UOW Branding Guidelines]

% Required packages
\RequirePackage{tikz}
\RequirePackage{xcolor}
\RequirePackage{xparse}
\RequirePackage{etex}
\RequirePackage{calc}
\RequirePackage{etoolbox}
\RequirePackage{pgfopts}
\RequirePackage{ifxetex}
\RequirePackage{ifluatex}

% Define a macro for the user to set options in the theme (just a color or eco at this stage).
\newcommand{\UOWthemeset}[1]{\pgfkeys{/UOWtheme/.cd,#1}}

% UOWtheme/themecolour is equivalent to UOWtheme/*/themecolour from the sub-packages.
\pgfkeys{/UOWtheme/.cd,
   .search also={
      /UOWtheme/inner,
      /UOWtheme/outer,
      /UOWtheme/color,
   },
   layout/.code=\pgfkeysalso{
      outer/layout=#1,
      color/layout=#1,
   },
   themecolour/.code=\pgfkeysalso{%
      color/themecolor=#1,%
   },
}


%% Alias themecolour to themecolor
\pgfkeys{%
   /themecolour/.style={
      /themecolor=#1
   },
}
% Set default values for options.
\newcommand{\@UOWtheme@defaults}{
   \pgfkeys{/UOWtheme/.cd,
      themecolor=blue,
      layout=standard,
      framenumbering=none,
   }
}

% subpackages
\useinnertheme{uow}
\useoutertheme{uow}
\usecolortheme{uow}
\usefonttheme{uow}

\@UOWtheme@defaults
\ProcessPgfOptions{/UOWtheme}
