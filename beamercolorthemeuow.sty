\newcommand*{\@UOWtheme@color}{}

\newcommand{\@UOWtheme@color@darknormaltext}{%
   \setbeamercolor{normal text}{%
      fg=black,
      bg=white
   }
}

\newcommand{\@UOWtheme@color@lightnormaltext}{%
   \setbeamercolor{normal text}{%
      fg=white,
      bg=\@UOWtheme@color
   }
}

\newcommand{\@UOWtheme@color@darktitlelike}{%
   \setbeamercolor{titlelike}{%
      use=normal text,
      parent=normal text
   }
}

\newcommand{\@UOWtheme@color@lighttitlelike}{%
   \setbeamercolor{titlelike}{%
      fg=white,
   }
}

