\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerfontthemeuow}
    [2015/07/23 A Beamer Font Theme That Matches the UOW Branding Guidelines V 1.0 (cc) tmgriffiths]
\RequirePackage{ifxetex}
\RequirePackage{textcase}
\ifxetex
   \RequirePackage{microtype}
\else
   \RequirePackage[tracking=true]{microtype}
      \renewcommand*{\allcapsspacing}[1]{\textls*[50]{#1}}%
      \renewcommand*{\allcaps}[1]{\allcapsspacing{\MakeTextUppercase{#1}}}%
\fi

% no more annoying font warnings
\let\Tiny=\tiny

% Font Assignment
\setbeamerfont*{title}{size=\Huge,}
\setbeamerfont*{author}{size=\normalsize}
\setbeamerfont*{date}{size=\normalsize}
\setbeamerfont*{institute}{size=\normalsize}
%\setbeamerfont*{section title}{size=\Large, shape=\bfseries}
\setbeamerfont*{subtitle}{size=\normalsize,}
\setbeamerfont*{frametitle}{size=\Large, shape=\bfseries}
\setbeamerfont*{alerted text}{shape=\bfseries}
\setbeamerfont*{block title}{shape=\bfseries}
\setbeamerfont*{block title alerted}{shape=\bfseries}
\setbeamerfont*{enumerate item}{shape=\bfseries}
\setbeamerfont*{caption}{size=\small, shape=\bfseries}
\setbeamerfont*{caption}{size=\tiny}
\setbeamerfont*{page number in head/foot}{size=\scriptsize}