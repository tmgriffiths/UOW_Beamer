\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerfontthemeuow}
    [2015/07/18 A Beamer Font Theme That Matches the UOW Branding Guidelines]
    
\RequirePackage[tracking=true]{microtype}
   \newcommand{\allcapsspacing}[1]{\textls*[60]{#1}}%
   \newcommand{\allcaps}[1]{\allcapsspacing{\MakeUppercase{#1}}}%
% Font Assignment
\setbeamerfont{title}{size=\Large, shape=\bfseries}
\setbeamerfont{author}{size=\small}
\setbeamerfont{date}{size=\small}
\setbeamerfont{section title}{size=\large, shape=\bfseries}
\setbeamerfont{block title}{size=\normalsize}
\setbeamerfont{block title alerted}{size=\normalsize}
\setbeamerfont{subtitle}{size=\normalsize}
\setbeamerfont{frametitle}{size=\large, shape=\bfseries}
\setbeamerfont{caption}{size=\small}
\setbeamerfont{page number in head/foot}{size=\scriptsize}